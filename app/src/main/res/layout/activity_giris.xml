<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlan"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">


        <ImageView
            android:background="@drawable/buton_layout_secici"
            android:id="@+id/geri"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_left_arrow_geri"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvKategoriDetaylariBaslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="@string/lider_toptan_market"
            android:textColor="@color/colorBeyaz"
            android:textSize="@dimen/_12sdp" />


        <ImageView
            android:id="@+id/sil"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:visibility="invisible" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@+id/frame"
        android:layout_above="@id/lay2"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="Telefon"
            app:boxBackgroundColor="@color/colorBeyaz"
            app:hintTextColor="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text=""
                android:fontFamily="@font/montserrat_semi_bold"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="@dimen/_12sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:visibility="visible"
            android:id="@+id/tvGirisYap"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş Yap"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semi_bold"
            android:background="@drawable/buton_mavi_acik_secici"
            android:textColor="@color/colorBeyaz"
            android:paddingLeft="@dimen/_50sdp"
            android:paddingRight="@dimen/_50sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp" />

        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGriKoyu" />

        <TextView
            android:id="@+id/tvSepetToplamTutar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üyeliğiniz yok mu?"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_light" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tvUyeOl"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ücretsiz Üye Ol"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_semi_bold"
            android:background="@drawable/buton_mavi_secici"
            android:textColor="@color/colorBeyaz"
            android:paddingLeft="@dimen/_50sdp"
            android:paddingRight="@dimen/_50sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical">


        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/buton_mavi_sadece_cerceve_oval"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_center" />

                <TextView
                    android:id="@+id/tvTelefon"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/telefon"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/kirmizi"
                    android:fontFamily="@font/montserrat_bold" />

            </LinearLayout>


            <TextView
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Müşteri Hizmetleri"
                android:gravity="center"
                android:layout_gravity="top|center"
                android:textColor="@color/colorBeyaz"
                android:textSize="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/cerceve_lacivert_dolu"
                android:fontFamily="@font/montserrat_regular" />

        </FrameLayout>


    </LinearLayout>


</RelativeLayout>