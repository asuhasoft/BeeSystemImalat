<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_3sdp"
    android:elevation="@dimen/_10sdp"
    app:cardBackgroundColor="@color/colorBeyaz"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/imSil"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/buton_layout_secici"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/x_ic_delete_small"
            android:visibility="visible" />

        <ImageView

            android:id="@+id/imUrunFoto"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tvUrunAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_toLeftOf="@+id/imSil"
            android:layout_toRightOf="@+id/imUrunFoto"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="left"
            android:textColor="@color/adresYazi"
            android:text="Boron Renkli Çamaşır Deterjanı"
            android:textSize="@dimen/_10sdp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tvUrunAdi"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_toRightOf="@+id/imUrunFoto"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewArttirmaAzaltma"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardBackgroundColor="@color/yesil_koyu"
                app:cardCornerRadius="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imUrunSayisiAzalt"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/buton_yesil_secici_azaltma"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_baseline_remove_24" />

                    <TextView
                        android:id="@+id/tvAdetSepet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toStartOf="@+id/imUrunSayisiArttir"
                        android:layout_toEndOf="@+id/imUrunSayisiAzalt"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorBeyaz"
                        android:textSize="@dimen/_8sdp" />

                    <ImageView
                        android:id="@+id/imUrunSayisiArttir"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/buton_yesil_secici_arttirma"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_add" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tvBilgilendirme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cerceve_sari"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:text="İndirmli Ürün"
                android:textColor="@color/kirmizi"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/tvFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/tvTutar"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="12.00 TL"
                android:textColor="@color/adresYazi"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvTutar"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_4sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:text="24.00 TL"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
