<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/kapatFragmenTamEkran"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:background="@drawable/buton_layout_secici"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_close_kirmizi"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvAdresFragmentBaslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/asdas"
            android:layout_toEndOf="@id/kapatFragmenTamEkran"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp" />


        <ImageView
            android:id="@+id/asdas"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:background="@drawable/buton_layout_secici"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_add"
            android:visibility="invisible" />


    </RelativeLayout>


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_banjo"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_banjo"
        android:visibility="gone" />


</RelativeLayout>