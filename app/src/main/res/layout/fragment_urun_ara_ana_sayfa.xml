<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlan"
    android:id="@+id/layoutUrunAraAnaSayfaFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/buton_layout_urun_arttirma"
            android:id="@+id/sepeteGit"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/_65sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_height="@dimen/_20sdp">

            <ImageView
                android:background="@drawable/buton_mavi_cerceve_oval_basilmis"
                android:id="@+id/im3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_sort_24"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvSirala"
                android:layout_toRightOf="@+id/im3"
                android:text="125"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvKategoriDetaylariBaslik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"

            android:text="Ürün  Ara"
            android:textColor="@color/colorBeyaz"
            android:textSize="@dimen/_12sdp" />


        <RelativeLayout
            android:visibility="invisible"
            android:background="@drawable/buton_layout_urun_arttirma"
            android:id="@+id/sirala"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_65sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_height="@dimen/_20sdp">

            <ImageView
                android:background="@drawable/buton_mavi_cerceve_oval_basilmis"
                android:id="@+id/im1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_sort_24"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvSepetToplamTutar"
                android:layout_toRightOf="@+id/im1"
                android:text="Sırala"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/frame"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_height="match_parent">

        <include
            layout="@layout/include_arama_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_5sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/buton_mavi_cerceve_oval"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:padding="@dimen/_3sdp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/ic_baseline_mic_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Ses ile ürün ara" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:background="@drawable/buton_mavi_cerceve_oval"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Barkod ile ürün ara" />

                        <ImageView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/barcode" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:maxLines="1"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:hint="Ürün / Marka / Kategori / Barkod ara"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12sdp" />


                    <ImageView
                        android:id="@+id/editTemizle"
                        android:background="@drawable/buton_layout_secici"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_outline_clear_24" />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/arama_ge_mi_i" />


                <TextView
                    android:id="@+id/tvGecmisiTemizle"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/ge_mi_i_sil" />

            </RelativeLayout>


            <View
                android:id="@+id/ayracView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/colorGri" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_3sdp"
                android:id="@+id/recycleViewAramaGecmisi" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>