<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    android:layout_gravity="center">

    <RelativeLayout
        android:background="@drawable/arama_butonu_cerceve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/indirimLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/cerceve_sari">

            <TextView
                android:id="@+id/tvIndirimOrani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="%25"
                android:textColor="@color/kirmizi"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvIndirimOrani"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:padding="@dimen/_3sdp"
                android:text="@string/indirim"
                android:textColor="@color/kirmizi"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>


        <ImageView
            android:background="@drawable/buton_layout_secici"
            android:id="@+id/imAlisVerisListesi"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/x_ic_add_list" />

        <ImageView
            android:id="@+id/imUrunFoto"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/boron" />

        <TextView
            android:id="@+id/tvUrunAdi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/imUrunFoto"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:textColor="@color/urunBasligi"
            android:text="Boron Renkli Çamaşır Deterjanı"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvBirimFiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUrunAdi"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="(12.00 TL / Adet)"
            android:textColor="@color/urunBirimFiyatRengi"
            android:textSize="@dimen/_6sdp" />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/layoutFiyat"
            android:layout_below="@+id/tvBirimFiyat"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/buton_gri"
                android:id="@+id/tvFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="12.00 TL"
                android:textColor="@color/urunBirimFiyatRengi"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@drawable/buton_mavi_secici"
                android:id="@+id/tvKampanyaliFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:text="12.00 TL"
                android:textColor="@color/colorBeyaz"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutFiyat">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imUrunSayisiAzalt"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/buton_yesil_secici_azaltma"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_remove_24" />

                    <TextView
                        android:id="@+id/tvAdet"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"

                        android:layout_toLeftOf="@+id/imUrunSayisiArttir"
                        android:layout_toRightOf="@+id/imUrunSayisiAzalt"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:text="0"
                        android:background="@color/yesil_koyu"
                        android:textColor="@color/colorBeyaz"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:id="@+id/imUrunSayisiArttir"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/buton_yesil_secici_arttirma"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_add" />


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardViewSepeteEkle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_8sdp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tvSepeteEkle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/buton_yesil_secici"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="@string/sepete_ekle"
                    android:textColor="@color/colorBeyaz"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </FrameLayout>


    </RelativeLayout>


</LinearLayout>
